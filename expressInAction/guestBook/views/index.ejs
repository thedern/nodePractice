<% include partials/header.ejs %>

    <% if (entries.length) { %>
        
        <% entries.forEach(function(entry) { %>
            
            <div class="card">
                <div class="card-header">
                    <div class="text-muted float-right">
                        <%= entry.published %>
                    </div>
                        <%= entry.title %>
                </div>
                <div class="card-body">
                    <p><%= entry.content %></p>
                </div>
            </div>
            <% }) %>
        <% } else { %>
            No entries! <a href="/new-entry">Add One!</a>
        <% } %>
<% include partials/footer.ejs %>